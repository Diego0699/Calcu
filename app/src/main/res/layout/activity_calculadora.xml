<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">

    <TextView
        android:id="@+id/lblUser"
        android:layout_width="410dp"
        android:layout_height="83dp"
        android:background="#F1F1F1"
        android:fontFamily="serif"
        android:paddingTop="25dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/txtOperacion"
        android:layout_width="403dp"
        android:layout_height="85dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/calcu_borders"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblUser" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"

        android:backgroundTint="#FF295E88"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOperacion" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"

        android:backgroundTint="#FF295E88"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOperacion" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"

        android:backgroundTint="#FF295E88"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDos"
        app:layout_constraintTop_toBottomOf="@+id/txtOperacion" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDos" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCinco" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="4"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnCinco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUno" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCinco"
        app:layout_constraintTop_toBottomOf="@+id/btnTres" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="7"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnOcho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuatro" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"

        android:text="9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnOcho"
        app:layout_constraintTop_toBottomOf="@+id/btnSeis" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#AED6F1"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOcho" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#AED6F1"
        android:text="-"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSuma"
        app:layout_constraintTop_toBottomOf="@+id/btnNueve" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#AED6F1"
        android:text="*"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCero" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#AED6F1"

        android:text="/"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma" />

    <Button
        android:id="@+id/btnElim"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#970005"
        android:paddingTop="0dp"
        android:text="CE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPunto" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#1D5200"
        android:paddingTop="0dp"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMulti" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF295E88"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSuma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSiete" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:backgroundTint="#AED6F1"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDiv"
        app:layout_constraintTop_toBottomOf="@+id/btnResta" />

</androidx.constraintlayout.widget.ConstraintLayout>